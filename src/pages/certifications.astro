---
import Layout from "../layouts/Layout.astro";
import { certificationsPageContent } from "../config";
---

<Layout seo={certificationsPageContent.seo}>
  <section class="mt-10 max-w-4xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Certifications</h1>
    <p class="opacity-60 mb-10">{certificationsPageContent.subtitle}</p>
    <div class="grid grid-cols-1 gap-6">
      {
        certificationsPageContent.certifications.map((cert) => (
          <div class="border border-gray-bg rounded-lg p-6 hover:border-gray-600 transition-colors">
            <div class="flex justify-between items-start mb-2">
              <h3 class="font-medium text-xl">{cert.title}</h3>
              <span class="opacity-60 text-sm">{cert.date}</span>
            </div>
            <p class="opacity-80">{cert.issuer}</p>
            {cert.url && (
              <a 
                href={cert.url}
                target="_blank"
                rel="noopener noreferrer" 
                class="inline-block mt-4 text-sm opacity-60 hover:opacity-100 transition-opacity"
              >
                View Certificate â†’
              </a>
            )}
          </div>
        ))
      }
    </div>
  </section>
</Layout>