---
import Layout from "../layouts/Layout.astro";
import { educationPageContent } from "../config";

---
<Layout seo={educationPageContent.seo}>
  <section class="mt-10 max-w-4xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Education</h1>
    <div class="grid grid-cols-1 gap-6 mt-8">
      {educationPageContent.education.map((edu) => (
        <div class="border border-gray-bg rounded-lg p-6">
          <h3 class="font-medium text-xl">{edu.degree}</h3>
          <p class="text-lg opacity-80 mt-1">{edu.institution}</p>
          <p class="opacity-60 mt-2">{edu.duration}</p>
          <p class="mt-2">{edu.description}</p>
          {edu.gpa && <p class="mt-2 opacity-80">GPA: {edu.gpa}</p>}
        </div>
      ))}
    </div>
  </section>
</Layout>