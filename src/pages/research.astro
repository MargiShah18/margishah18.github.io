---
import Layout from "../layouts/Layout.astro";
import { researchPageContent } from "../config";
---

<Layout seo={researchPageContent.seo}>
  <section class="mt-10 max-w-4xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">Research</h1>
    <p class="opacity-60 mb-10">{researchPageContent.subtitle}</p>
    <div class="grid grid-cols-1 gap-8">
      {
        researchPageContent.papers.map((paper) => (
          <div class="border border-gray-bg rounded-lg p-6 hover:border-gray-600 transition-colors">
            <div class="mb-3">
              <h3 class="font-medium text-xl mb-2">{paper.title}</h3>
              <p class="opacity-80 text-sm mb-1">
                {paper.authors.join(", ")}
              </p>
              <p class="opacity-60 text-sm">
                {paper.publication} · {paper.date}
              </p>
            </div>
            {paper.url && (
              <a
                href={paper.url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block text-sm opacity-60 hover:opacity-100 transition-opacity"
              >
                View Paper →
              </a>
            )}
          </div>
        ))
      }
    </div>
  </section>
</Layout>